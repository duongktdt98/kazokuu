<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesAndFragments.AddRoom3Frame">


<ScrollView
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="70dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/txt_title_add_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Đăng phòng trọ của bạn!"
            android:textSize="20dp" />

        <ImageView

            android:id="@+id/img_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title_add_room"
            android:layout_marginTop="23dp"
            android:background="@drawable/ic_vpn_key_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title_add_room"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@id/img_key"
            android:text="Thêm hình ảnh phòng trọ "
            android:textStyle="italic" />


        <TextView
            android:id="@+id/back_add2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <RelativeLayout
            android:id="@+id/image_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_key"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/add"
                android:scaleType="fitXY" />
        </RelativeLayout>


        <GridView
            android:layout_marginTop="30dp"
            android:scrollbars="none"
            android:id="@+id/grid_csvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:layout_below="@id/image_upload"
            ></GridView>


        <RelativeLayout
            android:id="@+id/comitbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/grid_csvc"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vienbutton"
                android:gravity="center"
                android:padding="20dp"
                android:text="Hoàn tất đặt phòng"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>



</FrameLayout>