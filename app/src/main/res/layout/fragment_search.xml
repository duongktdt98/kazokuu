<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesAndFragments.SearchFragment"
    android:layout_marginBottom="70dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm phòng trọ"
                android:textSize="20dp" />

        </LinearLayout>

        <RelativeLayout

            android:id="@+id/div_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/radius_timnhanh"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/colorBlack">

            <LinearLayout
                android:id="@+id/search_ed"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_khuvuc"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/ic_gps_fixed_black_24dp" />

                <TextView
                    android:id="@+id/btn_search_kv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#CCCCCC"
                    android:text="Hà Nội" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/btn_radius"
                    android:gravity="center"
                    android:hint="Nhập quận,huyện"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences|textFilter|textNoSuggestions"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_ed">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_timnhanh"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="5px">

                    <ImageView
                        android:id="@+id/img_tpgap"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:background="@drawable/tpn"
                        android:src="@drawable/timgan" />

                    <TextView
                        android:id="@+id/tpg"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Tìm phòng gấp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="5px">

                    <ImageView
                        android:id="@+id/img_tpgan"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:background="@drawable/gn_lv"
                        android:src="@drawable/timnha" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Tìm gần chỗ học và làm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="5px">

                    <ImageView
                        android:id="@+id/img_tpkcc"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:background="@drawable/chungchu"
                        android:src="@drawable/kcc" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="không chung chủ" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/radius_timnhanh"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="5px">

                    <ImageView

                        android:id="@+id/img_add"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:background="@drawable/addphong"
                        android:src="@drawable/add" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Đăng phòng ngay" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/div_search"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_vetifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/arial"
                android:text="Phòng đã xác thực"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/tv_vetifi"
                android:background="@drawable/ic_verified_user_black_24dp" />

            <GridView
                android:scrollbars="none"
                android:id="@+id/gv_nha_tro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_vetifi"
                android:numColumns="2">

            </GridView>

        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>
